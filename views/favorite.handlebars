{{>preload}}
<div class="body-container">
    {{>navbar}}

    <div class="fav-container">
        <div class="account-sec">
            <h3>Your Favourite Movies</h3>
            <div class="logout">
                <p>{{username}}</p>
                <form action="/account/logout?_method=DELETE" method="POST">
                    <button type="submit" id="logout-btn">Log out</button>
                </form>
            </div>
        </div>

        <div class="fav-content">

            {{!-- single favuorite item --}}
            {{#each favorites as |movie| }}
            <div class="fav-item">
                <div class="image-container">
                    <img src={{movie.image}} alt="movie-image" data-movie-id={{ movie.movie_id}}>
                </div>
                <div class="details-container">
                    <div class="details-content">
                        <p>{{movie.title}}</p>
                        <p>{{ movie.year }}</p>
                        <button type="button" id='explore' data-movie-id={{ movie.movie_id}}>More</button>
                    </div>
                </div>
                {{!-- remove favorite --}}
                <div class="remove-icon">
                    <i class="fa fa-window-close" aria-hidden="true" data-movie-id={{ movie.movie_id}}></i>
                </div>
            </div>
            {{/each}}
            {{!-- end of single favourite item --}}

            {{!-- popup overlay --}}
            <div class="overlay"></div>

            {{!-- popup modal --}}
            <div class="modal-container">
                <div class="modal-content">

                    <div class="close-container">
                        <button type="button" id='modal-close'>&times;</button>
                    </div>

                    <div class="video-container"></div>
                    <div class="review-container">

                    </div>
                </div>
            </div>

        </div>

    </div>
    {{>footer}}
</div>

<script src="js/loadVideo.js"></script>
<script src="js/favorite.js"></script>